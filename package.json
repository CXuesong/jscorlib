{
  "name": "jscorlib-repo",
  "version": "0.0.1",
  "repository": "https://github.com/CXuesong/jscorlib.git",
  "author": "CXuesong",
  "license": "MIT",
  "private": true,
  "scripts": {
    "g:build": "yarn workspaces foreach --all --verbose --topological-dev --parallel --interlaced run build",
    "g:build:prod": "yarn workspaces foreach --all --verbose --topological-dev --parallel --interlaced run build:prod",
    "g:lint": "yarn workspaces foreach --all --verbose --parallel run lint"
  },
  "workspaces": [
    "./packages/*",
    "./packages/@jscorlib/*",
    "./packages/@jscorlib-repo/*"
  ],
  "packageManager": "yarn@4.2.2",
  "devDependencies": {
    "@types/node": "^20.14.8",
    "ts-node": "^11.0.0-beta.1",
    "typescript": "^5.5.2"
  }
}
